<% layout('layouts/boilerplate') %>
    <h1>Edit Recipe</h1>
    <form action="/recipes/<%=recipe._id%>?_method=PUT" method="POST">
        <label for="title">Title:</label>
        <input type="text" id="title" name="recipe[title]" value="<%= recipe.title %>" required>
        <label for="preptime">Preparation Time:</label>
        <input type="number" id="preptime" name="recipe[preptime]" value="<%= recipe.preptime %>" required>
        <label for="description">Description:</label>
        <input type="text" id="description" name="recipe[description]" value="<%= recipe.description %>" required>
        <label for="ingredients">Ingredients:</label>
        <input type="text" id="ingredients" name="recipe[ingredients]" value="<%= recipe.ingredients %>" required>
        <label for="servings">Servings:</label>
        <input type="number" id="servings" name="recipe[servings]" value="<%= recipe.servings %>" required>
        <label for="instructions">Instructions:</label>
        <input type="text" id="instructions" name="recipe[instructions]" value="<%= recipe.instructions %>" required>
        <button type="submit">Update Recipe</button>
    </form>
